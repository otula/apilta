<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
       http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context 
       http://www.springframework.org/schema/context/spring-context.xsd">
  
  <!-- Scan everything from base package service, only include classes with proper annotation -->
  <context:component-scan base-package="service" use-default-filters="false" name-generator="core.tut.pori.context.CoreBeanNameGenerator">
	<context:include-filter type="annotation" expression="core.tut.pori.http.annotations.HTTPService"/>
  </context:component-scan>
</beans>