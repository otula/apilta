<?xml version="1.0" encoding="UTF-8" standalone="yes"?>
<task>
	<createdTimestamp>2017-07-04T10:15:31Z</createdTimestamp>
	<description>An example task that can be used to test the addTask method</description>
	<name>Example Task</name>
	<taskIdList>
		<taskId>1</taskId>
	</taskIdList>
	<taskTypeList>
		<taskType>gather</taskType>
	</taskTypeList>
	<updatedTimestamp>2017-07-04T10:15:31Z</updatedTimestamp>
	<userDetails>
		<userId>1</userId>
	</userDetails>
	<backendList>
		<backend>
			<backendId>1</backendId>
			<taskStatus>NOT_STARTED</taskStatus>
		</backend>
	</backendList>
	<callbackUri>http://127.0.0.1:8080/ApiltaService/rest/sensors/taskFinished</callbackUri>
	<when>
		<condition>
			<terms>
				<entry>
					<key>time/validFromToRange</key>
					<value>2017-07-04T10:15:31Z/2117-07-04T10:15:31Z</value>
				</entry>
				<entry>
					<key>time/interval</key>
					<value>86400</value>
				</entry>
				<!-- If location/area is missing, the data will default to Sodankylä, which is currently the only supported location
				<entry>
					<key>location/area</key>
					<value>Sodankylä</value>
				</entry> -->
			</terms>
		</condition>
	</when>
	<what>
		<output>
			<feature>O3/composite</feature>
		</output>
		<output>
			<feature>O3/OMI_individual</feature>
		</output>
		<output>
			<feature>aerosol/composite</feature>
		</output>
		<output>
			<feature>aerosol/individual</feature>
		</output>
		<output>
			<feature>UV_daily/composite</feature>
		</output>
		<output>
			<feature>UV_daily/individual</feature>
		</output>
		<output>
			<feature>UV_index/composite</feature>
		</output>
		<output>
			<feature>UV_index/individual</feature>
		</output>
		<output>
			<feature>cloud_cover/composite</feature>
		</output>
		<output>
			<feature>cloud_cover/individual</feature>
		</output>
		<output>
			<feature>SO2/composite</feature>
		</output>
		<output>
			<feature>SO2/individual</feature>
		</output>
		<!-- The only supported location is Sodankylä, so no need to report the location separately
		<output>
			<feature>sensor/location/area</feature>
		</output>
		-->
	</what>
</task>
